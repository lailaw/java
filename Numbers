package TurtleGraphics;

public class Numbers 
{
	public int BreakUp(int number)
	{
		// TODO Auto-generated method stub
		KeyboardReader reader = new KeyboardReader();
		int hundreds=0, tens=0, ones=0;
		hundreds=number/100;
		number=number%100;
		tens=number/10;
		ones=number%10;
		// The integer number is only a two digit number.
		int newnumber;
		newnumber= BuildUp(hundreds, tens, ones);
		return(newnumber);
		
		
	}
	
	public int BuildUp (int hundreds, int tens, int ones)
	{
		
		int newnumber=(hundreds*100)+(tens*10)+(ones);
		return(newnumber);
		
	}


}
